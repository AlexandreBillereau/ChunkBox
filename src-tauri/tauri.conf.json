{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ChunkBox",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APP/*",
          "$APPLOCALDATA/*",
          "$APPLOCALDATA/**",
          "$APPLOCALDATA/data/*",
          "$APPLOCALDATA/data/**",
          "$RESOURCE/**"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ChunkBox",
      "icon": ["icons/*"],
      "resources": ["resources/box.json"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ChunkBox",
        "width": 800,
        "height": 600
      }
    ]
  }
}
